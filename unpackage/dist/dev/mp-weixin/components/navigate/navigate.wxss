.horizonal-tab .active {
  color: red;
}
.scroll-tab {
  white-space: nowrap;
  /* 必要，导航栏才能横向*/
  border-bottom: 1rpx solid #eee;
  text-align: center;
}
.scroll-tab-item {
  display: inline-block;
  /* 必要，导航栏才能横向*/
  margin: 20rpx 30rpx 0 30rpx;
}
.active .scroll-tab-line {
  border-bottom: 5rpx solid red;
  border-top: 5rpx solid red;
  border-radius: 20rpx;
  /* width: 70rpx; */
}
.article {
  margin-top: 16px;
}
.article .content {
  margin: 10px 0;
  background-color: #fff;
  border-radius: 6px;
  padding: 10px;
}
.article .article-person {
  display: flex;
  justify-content: space-between;
}
.article .article-person .person {
  display: flex;
  margin-bottom: 10px;
}
.article .article-person .person image {
  margin-right: 8px;
  border-radius: 20px;
  overflow: hidden;
  background-color: #ddd;
  width: 34px;
  height: 34px;
}
.article .article-person .person .name-block {
  display: flex;
  flex-direction: column;
}
.article .article-person .person .name-block .name {
  display: flex;
  font-size: 13px;
}
.article .article-person .person .name-block .name .tags {
  background-color: #333;
  color: #fff;
  border-radius: 6px;
  padding: 0 8px;
  height: 18px;
  line-height: 18px;
  margin-left: 8px;
  font-size: 10px;
}
.article .article-person .person .name-block .date {
  font-size: 12px;
  color: #aaa;
}
.article .article-person .type {
  display: none;
}
.article .article-title {
  font-size: 14px;
  margin-bottom: 6px;
}
.article .article-text {
  font-size: 13px;
  color: #333;
}
.article .img-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: flex-start;
  margin-top: 16px;
}
.article .img-list image {
  width: 25vw;
  height: 80px;
}
.article .props {
  display: flex;
  padding-top: 16px;
  justify-content: space-between;
  color: #777;
}
.article .props ._span {
  display: flex;
  align-items: center;
}
.article .props .iconfont {
  font-size: 12px;
}

