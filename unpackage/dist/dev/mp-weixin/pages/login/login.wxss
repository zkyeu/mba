.bg {
  height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.bg image {
  width: 200rpx;
  height: 200rpx;
  /* border-radius: 50%; */
}
.bg view {
  font-size: 36rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
  color: #004097;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.bg text {
  font-size: 24rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #999999;
}
.bg .btn {
  width: 610rpx !important;
  height: 100rpx !important;
  border-radius: 50rpx !important;
  background: #004097;
  box-shadow: 0px 4px 6px 0px rgba(53, 68, 184, 0.4);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 32rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
}

