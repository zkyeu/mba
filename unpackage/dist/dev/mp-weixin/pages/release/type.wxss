.release {
  width: 100vw;
  height: 100vh;
  background-repeat: no-repeat;
  background-attachment: fixed;
  overflow: hidden;
}
.release .glass {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background: inherit;
  -webkit-filter: blur(5px);
          filter: blur(5px);
  z-index: 1;
}
.release .content {
  z-index: 999;
  padding: 20px;
}
.release .content .fonts {
  margin-top: 20px;
}
.release .content .fonts text {
  display: block;
  font-size: 30px;
  padding: 5px;
}
.release .content .line {
  width: 50px;
  border-top: 3px solid #ddd;
  margin-left: 10px;
}
.release .content .box {
  width: 574rpx;
  position: absolute;
  height: 380rpx;
  bottom: 200rpx;
  z-index: 3;
  display: flex;
  flex-wrap: wrap;
}
.release .content .box > view {
  height: 180rpx;
  width: 110rpx;
  margin-left: 120rpx;
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #333;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.release .content .box > view > image {
  width: 110rpx;
  height: 110rpx;
}
.release .content .box > view > text {
  margin-top: 10rpx;
}

